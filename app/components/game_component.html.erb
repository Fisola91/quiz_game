<div>
  <h3><%= question %></h3>
</div>

<%= form_with url: game_attempts_path(@game), method: :post, html: { "data-turbo" => false } do |f|%>
  <%= f.radio_button :answer, "#{solution_options[0]}" %> <%= solution_options[0] %> <br>
  <%= f.radio_button :answer, "#{solution_options[1]}" %> <%= solution_options[1] %> <br>
  <%= f.radio_button :answer, "#{solution_options[2]}" %> <%= solution_options[2] %> <br>
  <%= f.radio_button :answer, "#{solution_options[3]}" %> <%= solution_options[3] %> <br>
  <div>
    <br><%= f.submit "Check answer", class: "submit" %>
  </div>
<% end %>

<p><%= message %></p>

<% if message %>
  <%= form_with url: game_path(game), method: :get, html: { "data-turbo" => false } do |f| %>
    <%= f.submit "Generate question", class: "blue-button" %>
  <% end %>
<% end %>
